@model Demo_WebApp.Models.ViewModels.UserViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-4">
                <h3 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </h3>
                <p class="mb-0 mt-2 opacity-75">Join TodoApp to organize your tasks</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post" novalidate>
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email Address
                        </label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" />
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Password
                        </label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Confirm Password
                        </label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" asp-action="Register" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted">Already have an account?</p>
                        <a asp-action="LoginPage" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-1"></i>Sign In
                        </a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center py-3">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>
                    Your information is secure and protected
                </small>
            </div>
        </div>

        <!-- Password Requirements Info -->
        <div class="card mt-3 border-info">
            <div class="card-body">
                <h6 class="card-title text-info">
                    <i class="fas fa-info-circle me-1"></i>Password Requirements
                </h6>
                <ul class="small text-muted mb-0">
                    <li>At least 6 characters long</li>
                    <li>Must contain at least one uppercase letter</li>
                    <li>Must contain at least one digit</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Password strength indicator
        document.getElementById('Password').addEventListener('input', function() {
            const password = this.value;
            const requirements = document.querySelectorAll('.card-body ul li');

            // Check length
            if (password.length >= 6) {
                requirements[0].classList.add('text-success');
                requirements[0].innerHTML = '<i class="fas fa-check me-1"></i>At least 6 characters long';
            } else {
                requirements[0].classList.remove('text-success');
                requirements[0].innerHTML = 'At least 6 characters long';
            }

            // Check uppercase
            if (/[A-Z]/.test(password)) {
                requirements[1].classList.add('text-success');
                requirements[1].innerHTML = '<i class="fas fa-check me-1"></i>Must contain at least one uppercase letter';
            } else {
                requirements[1].classList.remove('text-success');
                requirements[1].innerHTML = 'Must contain at least one uppercase letter';
            }

            // Check digit
            if (/\d/.test(password)) {
                requirements[2].classList.add('text-success');
                requirements[2].innerHTML = '<i class="fas fa-check me-1"></i>Must contain at least one digit';
            } else {
                requirements[2].classList.remove('text-success');
                requirements[2].innerHTML = 'Must contain at least one digit';
            }
        });
    </script>
}