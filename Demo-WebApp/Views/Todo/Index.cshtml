@model Demo_WebApp.Models.ViewModels.TodoListViewModel
@{
    ViewData["Title"] = "My Todos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list me-2"></i>My Todos</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Add New Todo
    </a>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Tasks</h5>
                        <h2 class="mb-0">@Model.TotalItems</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tasks fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Completed</h5>
                        <h2 class="mb-0">@Model.CompletedItems</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Pending</h5>
                        <h2 class="mb-0">@Model.PendingItems</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filter & Search</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="search">Search:</label>
                        <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Search todos..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="priority">Priority:</label>
                        <select name="priority" class="form-control">
                            <option value="">All Priorities</option>
                            <option value="1">@Model.FilterPriority == Demo_WebApp.Models.Priority.Low ? "Low" : ""</option>
                            <option value="2">@Model.FilterPriority == Demo_WebApp.Models.Priority.Medium ? "Medium" : ""</option>
                            <option value="3">@Model.FilterPriority == Demo_WebApp.Models.Priority.High ? "High" : ""</option>
                            <option value="4">@Model.FilterPriority == DemoWebApp.Models.Priority.Urgent ? "Urgent" : ""</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="completed">Status:</label>
                        <select name="completed" class="form-control">
                            <option value="">All</option>
                            <option value="false">@Model.FilterCompleted == false ? "Pending" : ""</option>
                            <option value="true">@Model.FilterCompleted = =true ? "Completed" : "" </option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filter</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Todo Items -->
@if (Model.TodoItems.Any())
{
    <div class="row">
        @foreach (var todo in Model.TodoItems)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 @(todo.IsComplete ? "border-success" : "")">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="badge @GetPriorityBadgeClass(todo.Priority)">
                            @todo.Priority Priority
                        </span>
                        @if (todo.IsComplete)
                        {
                            <i class="fas fa-check-circle text-success"></i>
                        }
                    </div>
                    <div class="card-body">
                        <h6 class="card-title @(todo.IsComplete ? "text-decoration-line-through text-muted" : "")">
                            @todo.Title
                        </h6>
                        @if (!string.IsNullOrEmpty(todo.Description))
                        {
                            <p class="card-text small @(todo.IsComplete ? "text-muted" : "")">
                                @(todo.Description.Length > 100 ? todo.Description.Substring(0, 100) + "..." : todo.Description)
                            </p>
                        }
                        @if (todo.DueDate.HasValue)
                        {
                            <p class="card-text">
                                <small class="@(todo.DueDate < DateTime.Now && !todo.IsComplete ? "text-danger" : "text-muted")">
                                    <i class="fas fa-calendar me-1"></i>
                                    Due: @todo.DueDate.Value.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <form asp-action="ToggleComplete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn @(todo.IsComplete ? "btn-outline-warning" : "btn-outline-success") btn-sm">
                                    <i class="fas @(todo.IsComplete ? "fa-undo" : "fa-check")"></i>
                                </button>
                            </form>
                            <a asp-action="Details" asp-route-id="@todo.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@todo.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this todo?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-tasks fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">No todos found</h4>
        <p class="text-muted">Start by creating your first todo item!</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add Your First Todo
        </a>
    </div>
}

@functions {
    private string GetPriorityBadgeClass(Demo_WebApp.Models.Priority priority)
    {
        return priority switch
        {
            Demo_WebApp.Models.Priority.Low => "bg-secondary",
            Demo_WebApp.Models.Priority.Medium => "bg-info",
            Demo_WebApp.Models.Priority.High => "bg-warning",
            Demo_WebApp.Models.Priority.Urgent => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
